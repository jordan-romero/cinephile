<h1 class="display-4 text-dark text-center">Login</h1>

<div class="row justify-content-center">
      <%= form_tag '/login' do %>
      <div class="form-group" style="width :50em;">
         <div class="text-center"><%= label_tag :username%></div>
         <%= text_field_tag :username, nil, class: 'form-control'%>
         </div>
      <div class="form-group" style="width :50em;">
         <div class="text-center"><%= label_tag :password%></div>
         <%= password_field_tag :password, nil, class: 'form-control'%>
         </div>
      </div>
      <div class="row justify-content-center"><%= submit_tag "Login", class: "btn btn-outline-dark"%></div>
      <%end%>
</div>
 