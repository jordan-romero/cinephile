<% if @review.errors.any? %>
  <div id="error_explanation ">
    <h2 class="text-center text-danger">
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this review from being saved:
    </h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li class= "h4 list-unstyled text-center text-danger"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group" style="width :50em;">
    <%= form_with model: @review do |form| %>
     <div class="form-group" style="width :50em;">
        <%= form.label :rating %>
        <%= form.number_field :rating, in: 1..10, class: "form-control" %>
    </div>
    <div  class="form-group" style="width :50em;">
        <%= form.label :content %>
        <%= form.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group" style="width :50em;"><%= form.collection_select :user_id, User.all, :id, :name %> </div>
    <div class="form-group" style="width :50em;"><%= form.collection_select :movie_id, Movie.all, :id, :title %> </div>
   
   <span><%= form.submit value="Submit", class: "btn btn-outline-dark" %> </span>  

<% end %>