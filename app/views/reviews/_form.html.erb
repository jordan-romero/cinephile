<%= render 'errors/errors', model: @review %>

<div class="row justify-content-center">
  <div class="form-group" style="width :50em;">
    <%= form_with model: review do |form| %>
     <div class="form-group" style="width :50em;">
     <%= form.hidden_field :movie_id %>
        <p class= "text-center"><%= form.label :rating%></p>
        <%= form.number_field :rating, in: 1..10, class: "form-control" %>
    </div>
    <div  class="form-group" style="width :50em;">
        <p class= "text-center"><%= form.label :content %></p>
        <%= form.text_area :content, class: "form-control" %>
    </div>
  
   
   
   
   <div class="row justify-content-center"><%= form.submit value="Submit", class: "btn btn-outline-dark" %> </div>  
  </div>
  </div>

<% end %>