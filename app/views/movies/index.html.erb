<h1 class="pt-3 display-4 text-center bg-light text-dark">Cinephile Entertainment Collection</h1>

<% if @search %>
<table class="table table-hover" >
    <thead class="thead-dark">
        <tr>
            <th>Movie Title</th>
            <th>Release Date</th>
            <th>Runtime </th>
            <% if @movie.can_delete? %>
            <th>Not the one you wanted?</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><%= link_to @movie.title, movie_path(@movie), class: 'text-dark' %></td>
            <td><%= date_format(@movie.release_date) %></td>
            <td><%= @movie.runtime %> minutes</td>
            <% if @movie.can_delete? %>
            <td><%= button_to "Delete", @movie, method: :delete %></td>
            <% end %>
            </tr>
    </tbody>
</table>
    
<% else %>
 <table class="table table-hover" >
    <thead class="thead-dark">
        <tr>
            <th>Movie Title</th>
            <th>Release Date</th>
            <th>Runtime </th>
            <th></th>
        </tr>
    </thead>
    <% @movies.ordered_by_title.each do |movie| %>
        <tbody>
            <tr>
                <td><%= link_to (movie.title), movie_path(movie), class: 'text-dark' %></td>
                <td><%= date_format(movie.release_date) %></td>
                <td><%= movie.runtime %> minutes</td>
            </tr>
        </tbody>
    <% end %>
 </table>
<% end %>

